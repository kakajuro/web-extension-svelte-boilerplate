{
  "name": "The Clock",
  "version": "1.0",
  "description": "The clock which shows time and date quickly. It has background images correspond to the periods of a day.",
  "permissions": [
    "declarativeContent"
  ],
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}