{
  "name": "The Clock",
  "version": "1.0",
  "description": "The clock which shows time and date quickly. It has background images correspond to the periods of a day.",
  "permissions": [
    "tabs", 
    "activeTab"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}